FROM ubuntu:16.04
MAINTAINER xiaoyulei
RUN apt-get update && apt-get dist-upgrade -y && \
apt-get install -y openssh-server cmake build-essential gcc g++ autoconf automake git emacs vim sysstat clang
RUN git clone https://github.com/YuleiXiao/emacsconfig.git $HOME/.emacs.d
RUN git clone https://github.com/Andersbakken/rtags.git $HOME/rtags
CMD ["/usr/sbin/init"]
