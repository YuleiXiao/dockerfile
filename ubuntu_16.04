FROM ubuntu:16.04
MAINTAINER xiaoyulei
RUN apt-get update && apt-get dist-upgrade -y && \
apt-get install -y openssh-server cmake build-essential gcc g++ autoconf automake git emacs vim sysstat libclang-dev clang pkg-config zlib1g-dev openssl
RUN useradd -Groot,sudo -m -s /bin/bash xiaoyulei
USER xiaoyulei
WORKDIR /home/xiaoyulei
RUN git clone https://github.com/YuleiXiao/emacsconfig.git $HOME/.emacs.d
RUN git clone https://github.com/Andersbakken/rtags.git --recursive $HOME/rtags && mkdir -p $HOME/rtags/build && cd $HOME/rtags/build && cmake .. && make
ENV PATH $HOME/rtags/build/bin:$PATH
CMD ["/usr/sbin/init"]
